{% extends 'Admin.html.twig' %}

{% block body %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title">Service Table</strong>
                        </div>
                        <div class="card-body">
                            <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Titre</th>
                                    <th>Description</th>
                                    <th>Date</th>
                                    <th>Telephone</th>
                                    <th>Images</th>


                                </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <td><a href="{{ path('services_show_admin', { 'id': service.id }) }}">{{ service.id }}</a></td>
                                        <td>{{ service.titre }}</td>
                                        <td>{{ service.description }}</td>
                                        <td>{% if service.date %}{{ service.date|date('Y-m-d') }}{% endif %}</td>
                                        <td>{{ service.telephone }}</td>
                                        <td><img src="{{ asset('uploads/images/') ~ service.image }}" width="350" height="200" ></td>

                                        <td>
                                            <ul>




                                            </ul>
                                        </td>

                                    </tr>


                            </table>
                            <p>
                                <a href="{{ path('services_index_admin') }}">Retour Ã  la liste</a>
                            </p>

                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>
    <center> <div class="card-body">


            <button type="button" class="btn btn-secondary mb-1" data-toggle="modal" data-target="#staticModal">
                Supprimer
            </button>
            <div class="modal fade" id="staticModal" tabindex="-1" role="dialog" aria-labelledby="staticModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticModalLabel">Comfirmation Mr.Admin</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>
                                Comfirmer la suppression
                            </p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            {{ form_start(delete_form) }}


                            <button type="submit" class="btn btn-primary">Confirm</button>
                            {{ form_end(delete_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>


        <script type="text/javascript">
            $(document).ready(function() {
                $('#bootstrap-data-table-export').DataTable();
            } );
        </script>
    </center>




{% endblock %}
