                    </ul>
                </li>
                <li class="has-children">
                    <a href="#0" title="">Forum</a>
                    <ul class="sub-menu">
                        <li><a href="single-video.html">Video Post</a></li>
                        <li><a href="single-audio.html">Audio Post</a></li>
                        <li><a href="single-standard.html">Standard Post</a></li>
                    </ul>
                </li>
                {#<li><a href="style-guide.html" title="">Espace entreprise</a></li>#}

                <li><a href="{{ path('fixit_about') }}" title="">à propos</a></li>

                <a href="{{ path('fixit_contact') }}" title="">Contact</a>
                {% if is_granted('ROLE_CLIENT') %}
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <li class="has-children">
                <a href="{{ path('reclamation_index') }}" title="">Reclamation</a>

                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <ul class="sub-menu">
                    <li><a href="{{path('reclamation_new')}}">Faire une reclamation</a></li>
                    <li><a href="{{path('reclamation_index')}}">Voir ma liste reclamation</a></li>

                </ul>
                </li>
                {% endif %}
                {% endif %}{% endif %}

                {#f warka#}    {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li><a href="{{ path('fos_user_security_login') }}" title="">se connecter</a></li>

                    <li><a href="{{ path('fos_user_registration_register') }}" title="">s'inscrire</a></li>

                    {% else %}


                    <li><a href="{{ path('fos_user_profile_show') }}" title="">utilisateur: {{ app.user.username }}

                            <ul class="sub-menu">

                                <li><a href="{{ path('fos_user_profile_show') }}" title="">Profile</a></li>
                                <li><a href="{{ path('fos_user_security_logout') }}" title="">Déconnexion</a></li>


                            </ul>
                        </a>

                    </li>


                {% endif %}

                <li><a href="{{ path('opinon_ajout') }}" title="">Evaluez nous</a></li>
            </ul>
            <a href="#0" title="Close Menu" class="header__overlay-close close-mobile-menu">Close</a>
