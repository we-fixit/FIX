    <header id="header" class="s-header header" style="position: fixed;z-index: 997;transition: all .5s;">
        <div class="header__logo">
            <a class="logo" href="{{ path('homepage') }}">
                <img src="{{ asset('images/fixit1.jpg')}}"  style="margin-left: -80px" alt="Homepage" id="homepage" >
                <style type="text/css">
                #homepage{
                    width: 250px;
                    height: 80px;
                }

                </style>

            </a>
        </div>
        <a class="header__search-trigger" href="#0"></a>
        <div class="header__search">
            <form role="search" method="get" class="header__search-form" action="#">
