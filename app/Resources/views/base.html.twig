        {% block javascripts %}
            <script src="{{ asset('js/jquery-3.2.1.min.js')}}"></script>
            <script src="{{ asset('js/plugins.js')}}"></script>
            <script src="{{ asset('js/main.js')}}"></script>

            <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
